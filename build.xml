<?xml version = "1.0"?>
<project name = "BaselineV4" default = "runjUnit" basedir=".">

<property name = "project.name" value="BaselineV3" />
<property name = "main.name" value="Application" />
<property name = "package.name" value="com.baseline.salestax" />

<target name="build" depends="clean">
<mkdir dir="out"/>
<javac destdir="out">
    <src path="src;test"/>
    <classpath location="lib/junit-4.11.jar"/>
</javac>
</target>


<target name="clean" description="clean previous output directory">
<delete dir="out"/>
</target>

<target name="runjUnit" depends="build">
<junit printsummary="yes" haltonfailure="true">
    <classpath>
        <pathelement location="lib/junit-4.11.jar"/>
        <pathelement location="lib/mockito-all-1.9.5.jar"/>
        <pathelement location="out"/>
    </classpath>

    <batchtest fork="yes">
        <fileset dir="test">
            <include name="**/*Test*.java"/>
        </fileset>
    </batchtest>
</junit>
</target>

        </project>
